{
  "version": 2,
  "installCommand": "npm cache clean --force && npm i vite -g && npm install",
  "builds": [
    {
      "src": "api/ssr.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dist/server/**",
          "dist/client/**"
        ]
      }
    },
    {
      "src": "dist/client/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/ssr.js"
    }
  ]
}
