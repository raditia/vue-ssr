{
  "version": 2,
  "installCommand": "npm cache clean --force && npm i vite -g && npm install",
  "buildCommand": "npm run build:client && npm run build:server",
  "builds": [
    {
      "src": "api/ssr.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/client/**", "dist/server/**"]
      }
    },
    {
      "src": "dist/client/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/ssr.js"
    }
  ]
}
